
<body>
    <header>
        <h1>My Recipes</h1>
        <nav>
            <ul>
                <li><a href="/views/layouts/home.handlebars">Home</a></li>
                <li><a href="/views/profile.handlebars">Profile</a></li>
            </ul>
        </nav>
    </header>

    <main>
        <div class="recipe-container">
            {{#each recipes}}
            <div class="recipe">
                <h2>{{this.title}}</h2>
                <p class="blurb">{{this.blurb}}</p>
                <div class="details">
                    <h3>Details</h3>
                    <!-- Add more details like ingredients, instructions, etc. -->
                </div>
            </div>
            {{/each}}
        </div>
    </main>

    <footer>
        <p>&copy; 2024 Recipe App</p>
    </footer>